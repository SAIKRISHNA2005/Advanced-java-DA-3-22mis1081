<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
              https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd"
              version="3.0">

    <!-- Navigation Rules -->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/pages/register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/courseList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>courseDetails</from-outcome>
            <to-view-id>/pages/courseDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/courseDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/pages/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>payment</from-outcome>
            <to-view-id>/pages/payment.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <to-view-id>/pages/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/payment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <to-view-id>/pages/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/dashboard.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/pages/profile.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/profile.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <to-view-id>/pages/dashboard.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/payment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>paymentConfirmation</from-outcome>
            <to-view-id>/pages/paymentConfirmation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/paymentConfirmation.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <to-view-id>/pages/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/pages/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/pages/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>courseList</from-outcome>
            <to-view-id>/pages/courseList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>

